<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>distro</id>
    <includeBaseDirectory>false</includeBaseDirectory>

    <!-- The output produced. Everybody can open .zip files  -->
    <formats>
        <format>dir</format>
    </formats>

    <files>

        <!-- Make these present in the root for everybody to see -->
        <file>
            <source>../install.sh</source>
        </file>

        <file>
            <source>../oxalis-commons/src/main/resources/oxalis-global.properties</source>
            <outputDirectory>etc</outputDirectory>
            <lineEnding>windows</lineEnding>
        </file>

        <file>
            <source>../oxalis-sql/src/main/resources/sql/raw_stats-mysql.sql</source>
            <outputDirectory>sql</outputDirectory>
        </file>

    </files>

    <fileSets>

        <!-- Sample configuration files -->
        <fileSet>
            <directory>../oxalis-distribution/src/main/resources</directory>
            <outputDirectory>etc</outputDirectory>
            <includes>
                <include>*.xml</include>
                <include>*.properties</include>
            </includes>
            <lineEnding>windows</lineEnding>
        </fileSet>

        <!-- Documentation -->
        <fileSet>
            <directory>../doc</directory>
            <outputDirectory>doc</outputDirectory>
            <includes>
                <include>*/**</include>
            </includes>
        </fileSet>

        <!-- Shell scripts -->
        <fileSet>
            <directory>../oxalis-standalone/src/main/bash</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
        </fileSet>
    </fileSets>

    <moduleSets>

        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>no.sendregning.ap:oxalis-inbound:*</include>
            </includes>
            <binaries>
                <includeDependencies>false</includeDependencies>
                <unpack>false</unpack>
                <outputDirectory>
                    jee
                </outputDirectory>
                <!-- No version name to ensure that the name of the web context is unchanged across versions -->
                <outputFileNameMapping>oxalis.${artifact.extension}</outputFileNameMapping>
            </binaries>
        </moduleSet>

        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>no.sendregning.ap:oxalis-standalone:*</include>
            </includes>
            <binaries>
                <includeDependencies>false</includeDependencies>
                <unpack>false</unpack>
                <outputDirectory>
                    bin
                </outputDirectory>
                <!-- Ensures that the final artifact has the same name across versions, -->
                <!-- This ensures that the shell script will work -->
                <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
            </binaries>
        </moduleSet>

        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>no.sendregning.ap:oxalis-outbound:*</include>
            </includes>
            <binaries>
                <includeDependencies>true</includeDependencies>
                <dependencySets>
                    <dependencySet>
                        <outputDirectory>api</outputDirectory>
                    </dependencySet>
                </dependencySets>
                <unpack>false</unpack>
                <outputDirectory>api</outputDirectory>
            </binaries>
        </moduleSet>

    </moduleSets>

</assembly>